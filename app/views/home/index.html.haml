      .card-header Projects
      %ul.list-group.list-group-flush
        - Project.statuses.keys.each do |status|
          %li.list-group-item= text_with_badge(status.titleize, Project.send(status).count)
      .card-footer
        = text_with_badge('Total', Project.count)
  .col.mb-4
    .card
