%h1 Dashboard

.row.row-cols-1.row-cols-sm-2.row-cols-md-3
  .col.mb-4
    .card
      .card-header Task List
      %ul.list-group.list-group-flush
        %li.list-group-item= text_with_badge('Leads', Client.count)
        %li.list-group-item= text_with_badge('Leads Converted', Client.count)
        %li.list-group-item= text_with_badge('In Development', Client.count)
        %li.list-group-item= text_with_badge('In Maintenance', Client.count)
        %li.list-group-item= text_with_badge('Completed', Client.count)
      .card-footer
        = text_with_badge('Total', Client.count)
