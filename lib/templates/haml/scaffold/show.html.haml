%h1 <%= human_name %> Details
%dl
<% for attribute in attributes -%>
  %dt <%= attribute.human_name %>:
  %dd= @<%= singular_table_name %>.<%= attribute.name %>
<% end -%>

= link_to 'Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary'
= link_to 'Back', <%= index_helper %>_path, class: 'btn btn-outline-primary'
